{
  "name": "logscope",
  "private": true,
  "version": "1.0.0",
  "description": "LogScope - simple log viewer for web apps",
  "license": "MIT",
  "workspaces": ["server", "web"],
  "scripts": {
    "build:web": "npm --workspace=@logscope/web run build",
    "build:server": "npm --workspace=@logscope/server run build",
    "build": "npm run build:web && npm run build:server",
    "start": "node server.js",
    "test": "npm --workspace=@logscope/server test && npm --workspace=@logscope/web test"
  }
}
